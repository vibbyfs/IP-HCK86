{
  "testEnvironment": "node",
  "testMatch": [
    "**/__test__/**/*.test.js"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "collectCoverageFrom": [
    "controllers/**/*.js"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 85,
      "functions": 90,
      "lines": 90
    }
  },
  "setupFilesAfterEnv": [
    "./__test__/setup.js"
  ],
  "testTimeout": 30000,
  "verbose": true,
  "maxWorkers": 1
}
